---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Title from "../components/Title.astro";
import Button from "../components/Button.astro";
import SkillCard from "../components/SkillCard.astro";
---

<Layout title="MatiteDev">
  <header><Navbar /></header>
  <main>
    <section class="about">
      <img src="matite_img.jpeg" alt="My image" />
      <article>
        <p>Hola!, soy Matías Tite</p>
        <Title text="Desarrollador de Software de Pillaro" />
      </article>
      <Button message="Leer más" icon="external-link.svg" />
    </section>
    <section class="skills">
      <Title text="Skills y Tecnologías" />
      <section>
        <SkillCard
          title="Frontend"
          description="Desarrollo de sitios web e interfaces de usuario con HTML, CSS, JavaScript y AstroJS"
          icon="design.svg"
        />
        <SkillCard
          title="Automatización"
          description="Desarrollo de scripts en Python para la automatización de tareas"
          icon="python.svg"
        />
        <SkillCard
          title="Backend"
          description="Desarrollo de apps web tipo monolito con Django y de APIs Rest con DRF"
          icon="server.svg"
        />
      </section>
    </section>
    <section class="work"></section>
    <section class="contact"></section>
  </main>
</Layout>

<style>
  main {
    margin: 50px auto 0 auto;
    max-width: 1020px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 100px;
  }

  .about {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 40px;
    width: 100%;
    height: calc(100vh - 50px);
    text-align: center;
    border-bottom: 1px solid rgb(30, 30, 30, 0.3);
    padding: 0 20px;
  }

  .about > img {
    width: 150px;
    border-radius: 9999px;
    object-fit: cover;
  }

  .about > article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .skills {
    display: flex;
    flex-direction: column;
    gap: 50px;
    width: 100%;
    align-items: center;
    border-bottom: 1px solid rgb(30, 30, 30, 0.3);
    padding: 0px 20px 100px 20px;
  }

  .skills > section {
    display: flex;
    gap: 40px;
    flex-wrap: wrap;
    justify-content: center;
  }
</style>
